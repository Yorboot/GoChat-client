<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GoChat.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GoChat.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GoChat.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        x:CompileBindings="True"
        x:DataType="vm:MainWindowViewModel"
        Title="GoChat">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="*,Auto" Margin="10">
        <TransitioningContentControl Content="{Binding CurrentPage}" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="5"
                    HorizontalAlignment="Right">
            <Button Command="{Binding NavigateBackCommand}" Content="Back" />
            <Button Command="{Binding NavigateForwardCommand}" Content="Next" />
        </StackPanel>
    </Grid>
        
</Window>